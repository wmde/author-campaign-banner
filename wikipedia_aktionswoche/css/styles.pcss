@media ( min-width: 1200px ) {
	.aktionswoche-banner {

		&-inner {
			background-image: unset;
			background-size: contain;
			background-repeat: repeat;
			display: flex;
			flex-direction: row;
			padding-top: 0;
			padding-bottom: 0;
			padding-left: 28px;
		}

		&-illustration {
			display: inline;
			width: 20%;
			height: 210px;
			margin-top: unset;
		}

		&-wrapper {
			background-size: cover;
			background-position: top left;
			background-repeat: repeat;
			width: 80%;
			padding-right: 100px;
		}

		&-title {
			margin-top: 10px;
			padding-top: 35px;
			font-size: 2.5vw;
		}

		&-banner {
			margin-top: 20px;
			margin-bottom: 36px;
