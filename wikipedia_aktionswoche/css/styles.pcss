:root {
	--banner-color-primary: #ee8019;
	--banner-color-secondary: #ffffff;
	--banner-color-outline: #919191;
	--banner-color-black: #000000;
	--banner-color-white: #ffffff;
	--banner-color-blue: #014acf;
}

.aktionswoche-banner {
	font-family: 'Helvetica', sans-serif;
	font-weight: bold;
	font-stretch: normal;
	font-style: normal;
	z-index: 101;
	width: 100%;
	text-align: center;
	overflow: hidden;
	display: none;
	position: relative;

	.mobile-break {
		display: block;
	}

	a {
		text-decoration: none;
	}

	&-inner {
		box-sizing: border-box;
		height: 100%;
		text-align: left;
		width: 100%;

		display: flex;
		flex-direction: column;
		align-items: center;

		background-size: cover;
		background-position: top left;
		background-repeat: repeat;
	}

	&-illustration {
		width: 27vw;
		height: 27vw;
		margin-top: 12px;
		background-size: contain;
		background-repeat: no-repeat;
	}

	&-wrapper {
		text-align: center;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	&-title {
		padding-top: 11px;
		font-size: 5.3vw;
		line-height: 22px;
		letter-spacing: 0.5px;
	}

	&-banner {
		color: var( --banner-color-black );
		width: 70%;
		margin-top: 24px;
		font-size: 4.6vw;
		line-height: 28px;
		letter-spacing: 0.5px;
	}

	&-button {
		background-color: var( --banner-color-white );
		color: var( --banner-color-blue );
		padding: 8px 7px 8px 8px;
		margin-top: 44px;
		text-align: center;
		font-size: 7.8vw;
		line-height: 30px;
		display: inline-block;
		margin-bottom: 40px;
		border-radius: 5px;
	}

	&-close {
		background: transparent url( '//upload.wikimedia.org/wikipedia/commons/5/5e/Icon_ionic-md-close-1%402x.png' ) no-repeat center/60%;
		background-size: cover;
		cursor: pointer;
		position: absolute;
		z-index: 1002;
		width: 20px;
		height: 20px;
		right: 18px;
		top: 20px;

		a {
			display: inline-block;
			width: 20px;
			height: 20px;
		}
	}
}

